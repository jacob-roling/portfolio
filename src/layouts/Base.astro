  <body class="text-[1.125rem]" hx-boost="true" hx-ext="morph, route-announcer">
    <header
      class="z-10 print:hidden fixed w-full top-0 border-b bg-neutral-background-subtle"
      im-preserve='true'
    >
      <dialog id="banner-dialog" class="static w-full" open>
        <div class="flex items-center px-4 bg-warning-background-element text-warning-text-high-contrast py-1 border-b border-warning-border">
          <p class="text-center grow"><span aria-hidden="true">ðŸš§</span> This website is currently under construction. <span aria-hidden="true">ðŸš§</span></p>
          <button class="button icon warning outlined" onclick="document.getElementById('banner-dialog').close()">
            <Icon name="heroicons:x-mark" aria-hidden="true" />
            <span class="sr-only">
              Close banner message
            </span>
          </button>
        </div>
      </dialog>
      <nav class="container py-2" aria-label="primary" class="py-2">
        <ul class="flex gap-4" role="list">
          <li class="sr-only focus-within:not-sr-only">
            <a class="button" href="#main">Skip to content</a>
          </li>
          <li>
            <a class="button" href="/">Home</a>
          </li>
          <li>
            <a class="button" href="/blog/page/1">Blog</a>
          </li>
          <li>
            <a class="button" href="/#projects">Projects</a>
          </li>
          <li class="ml-auto">
            <button class="button outlined" onclick="document.getElementById('search').showModal()">
              <Icon
                class="inline"
                name="heroicons:magnifying-glass"
                aria-hidden="true"
              />
              Search
              <span class="badge">
                <kbd>Ctrl</kbd> + <kbd>k</kbd>
              </span>
            </button>
          </li>
        </ul>
      </nav>
    </header>

    <slot />

    <footer
      class="container typography print:hidden bg-neutral-background-subtle py-4 border-t"
    >
      <nav aria-label="footer">
        <ul class="flex gap-4 items-center max-w-full" role="list">
          <li>
            <a href="/sitemap-index.xml">Sitemap</a>
          </li>
          <li>
            <a href="/rss.xml">RSS</a>
          </li>
          <li class="ml-auto">
            <label for="theme-select">Theme: </label>
            <select data-controller="theme" name="theme" id="theme-select">
              <option value="auto">Auto</option>
              <option value="light">Light</option>
              <option value="dark">Dark</option>
            </select>
          </li>
        </ul>
      </nav>
      <p class="mt-4">&copy; {new Date().getFullYear()} Jacob Roling</p>
    </footer>

    <Search />

    <script>
      import htmx from "htmx.org";
      import { Application } from "@hotwired/stimulus";
      import ThemeController from "#controllers/theme_controller";
      import RouteAnnouncer from "htmx-route-announcer";
      
      window.htmx = htmx;
      window.htmx.defineExtension("route-announcer", RouteAnnouncer);
      
      import("idiomorph/dist/idiomorph-ext.js");
      
      window.Stimulus = Application.start();
      window.Stimulus.register("theme", ThemeController);
    </script>
  </body>
</html>
