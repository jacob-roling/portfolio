    <link rel="canonical" href={canonicalURL.href.slice(0, -1)} />
    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Jacob Roling"
      href={`${Astro.site}rss.xml`}
    />
    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
